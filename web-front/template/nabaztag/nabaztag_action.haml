.row
    .span8= name
    .span8 APIKEY: #{apikey}
    
.row
    .span8
        %form.play(action="#" onsubmit="return false")
            %fieldset
                %legend Play sound
                .clearfix
                    %label(for='url') url:
                    %input.play(type='text' name='url')
                .actions
                    %input.btn.primary(type="submit" value="Play")
.row
    .span8
        %form.tts(action="#" onsubmit="return false")
            %fieldset
                %legend TTS
                .clearfix
                    %label(for='tts') command:
                    %textarea.tts(cols="40" name='tts')
                .actions
                    %input.btn.primary(type="submit" value="tts")
                    
.row
    .span8
        %form.exec(action="#" onsubmit="return false")
            %fieldset
                %legend Exec command
                .clearfix
                    %label(for='command') command:
                    %textarea.command(cols="40" name='command')
                .actions
                    %input.btn.primary(type="submit" value="Exec")

.row
    .span8
        %form.timeZone(action="#" onsubmit="return false")
            %fieldset
                .clearfix
                    %label(for='timeZone') TimeZone:
                    %select.timeZone(name="timeZone")
                .actions
                    %a.btn.primary.timeZone Set

.row
    .span8
         %form.week(action="#" onsubmit="return false")
             %fieldset
                 .clearfix
                    .days

                 .actions
                     %a.btn.primary.week Save
.actions
    %a.btn.primary.wakeup WakeUp
    %a.btn.primary.sleep Sleep

%a.btn(href="#nabaztag/list") Back